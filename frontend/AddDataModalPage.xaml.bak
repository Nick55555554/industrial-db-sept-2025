<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontend.AddDataPage"
             Title="Add Data">
    
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            
            <Label Text="Experiment Name:" FontSize="16" FontAttributes="Bold"/>
            <Entry x:Name="ExperimentNameEntry" Placeholder="Enter experiment name"/>
            
            <Label Text="Date:" FontSize="16" FontAttributes="Bold"/>
            <DatePicker x:Name="ExperimentDatePicker"/>
            
            <Button Text="Save" Clicked="OnSaveClicked" BackgroundColor="Green"/>
            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="Gray"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>